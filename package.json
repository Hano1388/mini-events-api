{
  "name": "express_typescript_boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "lint": "eslint '**/*.(ts|js)",
    "lint:fix": "eslint --fix '**/*.+(ts|js)'",
    "precommit": "lint-staged",
    "db:create": "ts-node src/db/createOrDropDb.ts",
    "db:drop": "ts-node src/db/createOrDropDb.ts",
    "db:generate:migration": "knex migrate:make --knexfile knexfile.ts -x ts $npm_config_name",
    "db:generate:seed": "knex seed:make --knexfile knexfile.ts -x ts $npm_config_name",
    "db:migrate": "knex migrate:latest --knexfile knexfile.ts",
    "db:rollback": "knex migrate:rollback",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
    "db:seed": "knex seed:run"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "node-geocoder": "^3.27.0",
    "pg": "^8.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.3",
    "@types/node": "^14.0.26",
    "@types/node-geocoder": "^3.24.1",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "concurrently": "^5.2.0",
    "eslint": "^7.5.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "yarn lint:fix",
      "git add"
    ]
  }
}
